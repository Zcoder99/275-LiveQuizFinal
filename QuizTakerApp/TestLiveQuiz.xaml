<Window x:Class="QuizTakerApp.TestLiveQuiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuizTakerApp"
        mc:Ignorable="d"
        Title="TestLiveQuiz" Height="450" Width="800">
    <Grid>
        <!-- Use a Grid instead of StackPanel -->
        <Grid x:Name="QuestionsContainer">
            <!-- Define a single row that fills the available height -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <materialDesign:Transitioner Grid.Row="0" x:Name="TransitionerControl"/>
        </Grid>
    </Grid>
</Window>
